@model IEnumerable<Bakery.ViewModel.CategoryViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutStart.cshtml";
}

    <div id="carousel-home" style="width:1100px; margin-left:7px;" class="carousel slide" data-ride="carousel">
        @*Указатели*@
        <ol class="carousel-indicators">
            <li data-target="#carousel-home" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-home" data-slide-to="1"></li>
            <li data-target="#carousel-home" data-slide-to="2"></li>       
        </ol>

        @*Контент слайда*@
        <div class="carousel-inner">

            <div class="item active">            
                <img src="~/Images/HomeCatagory/01.jpg" />
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <img src="~/Images/HomeCatagory/02.jpg" />           
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <img src="~/Images/HomeCatagory/03.jpg" />    
               <div class="carousel-caption">
                </div>
            </div>  

        </div>

        @*Элементы управления*@
        <a class="left carousel-control" href="#carousel-home" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-home" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>

    <div class="welcome">
       <p class="welcomeHeader">Welcome to the Bakery!</p>
        <p>Why does Bakery baking taste so good? We think it's because we start from scratch, using only the finest ingredients and baking from the same recipes Grandma used over 40 years ago.
        Starting with buttermilk, whole eggs, creamery butter, quality chocolate, fine milled flour and cane sugar upholds the tradition of scratch baking that we are proud to serve.</p>
        <p>Glad to see you in our cafe-shop!</p>
        
    </div>


    <div class="categoryThumbnail">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="thumbnail">
                        <img src="~/Images/HomeCatagory/@item.Name-.jpg" alt="@item.Name" />
                        <div class="caption">
                            <h3>@item.Name</h3>
                            <p>@Html.ActionLink("Show all", "Products", "Home", new { id = item.Id }, new { @class = "btn btn-info", role = "button" })</p>
                        </div>
                    </div>
                </div>
            }       
        </div>
    </div>







